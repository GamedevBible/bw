<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/game_gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/buttonsLayout"
        android:layout_alignParentTop="true">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@color/transparent"
            android:src="@drawable/logoBible"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:id="@+id/buttonsLayout">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:layout_centerHorizontal="true"
            android:text="Начать игру"
            android:id="@+id/startButton"
            style="@style/Widget.AppCompat.Button"
            android:textColor="@android:color/white"
            android:ems="18" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:text="Загадать слово другу"
            android:id="@+id/recordsButton"
            style="@style/Widget.AppCompat.Button"
            android:textColor="@android:color/white"
            android:ems="18" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Дополнительно"
            android:layout_marginBottom="5dp"
            android:id="@+id/contactsButton"
            style="@style/Widget.AppCompat.Button"
            android:textColor="@android:color/white"
            android:ems="18" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:text="Другие наши игры"
            android:id="@+id/guideButton"
            style="@style/Widget.AppCompat.Button"
            android:textColor="@color/bw_blue"
            android:ems="18" />
    </LinearLayout>
    <LinearLayout
      android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
      android:visibility="gone">
      <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/bw_blue"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:maxLines="1"
            android:id="@+id/guessedWords"
            android:text="Угадано слов:"/>
      <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/bw_blue"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:maxLines="1"
            android:id="@+id/guessedHardWords"
            android:text="Угадано сложных слов:"/>
    </LinearLayout>
</RelativeLayout>
