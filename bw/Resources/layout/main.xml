<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/brown_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:hardwareAccelerated="false"
    android:id="@+id/mainLayout">
  <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:background="@color/brown_color"
        android:layout_height="wrap_content">
    <WebView
      android:id="@+id/bridgeWebView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="visible"
        android:background="@color/brown_color"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/bridgeImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/brown_color"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
  </android.support.constraint.ConstraintLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:text="Начать игру"
            android:visibility="gone"
            android:id="@+id/startButton"
            style="@style/Widget.AppCompat.Button"
            android:textColor="@color/brown_color"
            android:ems="18" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:text="Загадать слово другу"
            android:layout_below="@+id/startButton"
            android:visibility="gone"
            android:id="@+id/recordsButton"
            style="@style/Widget.AppCompat.Button"
            android:textColor="@color/brown_color"
            android:ems="18" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/recordsButton"
            android:visibility="gone"
            android:text="Дополнительно"
            android:layout_marginBottom="5dp"
            android:id="@+id/contactsButton"
            style="@style/Widget.AppCompat.Button"
            android:textColor="@color/brown_color"
            android:ems="18" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/contactsButton"
            android:layout_marginBottom="15dp"
            android:text="Другие наши игры"
            android:visibility="gone"
            android:id="@+id/guideButton"
            style="@style/Widget.AppCompat.Button"
            android:textColor="@color/brown_color"
            android:ems="18" />
    <LinearLayout
      android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
      android:visibility="gone">
      <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/bw_blue"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:maxLines="1"
            android:id="@+id/guessedWords"
            android:text="Угадано слов:"/>
      <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/bw_blue"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:maxLines="1"
            android:id="@+id/guessedHardWords"
            android:text="Угадано сложных слов:"/>
    </LinearLayout>
</RelativeLayout>
