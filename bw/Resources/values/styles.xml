<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="colorPrimary">@color/brown_color</item>
    <item name="colorPrimaryDark">@color/sky_color</item>
    <item name="colorAccent">@color/brown_color</item>
    <item name="android:colorButtonNormal">@color/orange_color</item>
    <item name="colorButtonNormal">@color/orange_color</item>
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="android:windowContentTransitions">true</item>
    <!--<item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>-->
    <!--<item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>-->
  </style>

  <style name="AppTheme.Main">
    <!--item name="android:windowTranslucentStatus">false</item-->
    <!--<item name="android:windowTranslucentNavigation">true</item>-->
  </style>

  <style name="AlertDialogTheme" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
    <item name="colorPrimary">@color/brown_color</item>
    <item name="colorPrimaryDark">@color/brown_color</item>
    <item name="colorAccent">@color/brown_color</item>
  </style>

  <style name="ProgressDialogTheme" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
    <item name="colorPrimary">@color/brown_color</item>
    <item name="colorPrimaryDark">@color/brown_color</item>
    <item name="colorAccent">@color/brown_color</item>
    <item name="android:windowBackground">@color/transparent</item>
  </style>

  <style name="FriendWordDialog" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
    <item name="colorPrimary">@color/brown_color</item>
    <item name="colorPrimaryDark">@color/brown_color</item>
    <item name="colorAccent">@color/brown_color</item>
    <item name="android:windowAnimationStyle">@style/FriendWordDialogAnimation</item>
  </style>

  <style name="FriendWordDialogAnimation">
    <item name="android:windowEnterAnimation">@anim/friend_word_in</item>
    <item name="android:windowExitAnimation">@anim/friend_word_out</item>
  </style>

  <style name="ActivitySplash" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowBackground">@drawable/splash_background</item>
    <item name="android:windowFullscreen">true</item>
  </style>

</resources>